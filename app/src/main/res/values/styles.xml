<resources>

    <!-- Base application theme. -->
    <style name="AppTheme_Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionBarColor_Dark</item>
        <item name="colorPrimaryDark">@color/statusBarColor_Dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionBarColor_Light</item>
        <item name="colorPrimaryDark">@color/statusBarColor_Light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ManageDashboardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme_Dark">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>-->
        <!--<item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme_Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="WhiteNormalTextTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_6_sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/pad_10dp</item>
        <item name="android:layout_marginLeft">@dimen/pad_4dp</item>
        <item name="android:layout_marginRight">@dimen/pad_4dp</item>
        <item name="android:layout_marginBottom">@dimen/pad_4dp</item>
    </style>

    <style name="WhiteNormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_5_sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/pad_1dp</item>
        <item name="android:layout_marginLeft">@dimen/pad_4dp</item>
        <item name="android:layout_marginRight">@dimen/pad_4dp</item>
        <item name="android:layout_marginBottom">@dimen/pad_1dp</item>
    </style>

    <style name="CopyRightText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_7_sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MatchParentRL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapSizeImgView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="PinkColorBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pad_22dp</item>
        <item name="android:background">@drawable/rounded_activate_button</item>
        <item name="android:textColor">@drawable/enable_disable_btn_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PinkColorBtn_LightDisable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pad_22dp</item>
        <item name="android:background">@drawable/rounded_light_enb_disb_button</item>
        <item name="android:textColor">@drawable/enable_disable_btn_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NormalEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pad_22dp</item>
        <item name="android:background">@drawable/rounded_textedit</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/txt_7_sp</item>
        <item name="android:textColorHint">@color/textPurple</item>
        <item name="android:paddingStart">@dimen/pad_10dp</item>
        <item name="android:paddingLeft">@dimen/pad_10dp</item>
    </style>

    <style name="DetailInformationTextView" parent="WhiteNormalText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_7_sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelTextView" parent="WhiteNormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/text_label</item>
        <item name="android:textSize">@dimen/txt_7_sp</item>
    </style>

    <style name="ButtonWhiteBackPinkText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pad_23dp</item>
        <item name="android:layout_marginLeft">@dimen/pad_7dp</item>
        <item name="android:layout_marginRight">@dimen/pad_7dp</item>
        <item name="android:textColor">@color/own_pink</item>
        <item name="android:textSize">@dimen/txt_7_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_btn_white_gray_border</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TimesTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/own_pink</item>
        <item name="android:textSize">@dimen/txt_35_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pad_22dp</item>
        <item name="android:layout_marginLeft">@dimen/pad_7dp</item>
        <item name="android:layout_marginRight">@dimen/pad_7dp</item>
        <item name="android:textColor">@color/normal_back</item>
        <item name="android:textSize">@dimen/txt_8_sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/pad_7dp</item>
    </style>

    <style name="OptionListView">
        <item name="android:paddingLeft">@dimen/pad_7dp</item>
        <item name="android:paddingRight">@dimen/pad_7dp</item>
        <item name="android:layout_marginTop">@dimen/pad_7dp</item>
        <item name="android:layout_marginBottom">@dimen/pad_7dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AxisTextView">
        <item name="android:textSize">@dimen/txt_6_sp</item>
        <item name="android:textColor">@color/normal_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>

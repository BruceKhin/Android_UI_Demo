<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <include
        layout="@layout/action_bar" />

    <ScrollView
        android:id="@+id/scrView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-5dp"
        android:background="@color/dboard_detail_data_back"
        android:layout_below="@+id/header_action">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llNoAlerts"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/pad_15dp"
                android:layout_marginRight="@dimen/pad_20dp"
                android:layout_marginLeft="@dimen/pad_20dp"
                android:background="@drawable/alerts_nothing_to_see">
                <ImageView
                    android:layout_width="@dimen/pad_75dp"
                    android:layout_height="@dimen/pad_62dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/pad_15dp"
                    android:src="@drawable/dboard_alert_logo"/>
                <TextView
                    style="@style/WhiteNormalTextTitle"
                    android:text="@string/alerts_no_msgs"
                    android:textSize="@dimen/txt_9_sp"/>
                <TextView
                    style="@style/LabelTextView"
                    android:text="@string/alerts_you_upto"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/pad_15dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pad_3dp">
                    <RelativeLayout
                        android:layout_width="@dimen/pad_50dp"
                        android:layout_height="@dimen/pad_50dp"
                        android:background="@drawable/alert_asq_back">
                        <ImageView
                            android:layout_width="@dimen/pad_23dp"
                            android:layout_height="@dimen/pad_23dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/take_asq_logo"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/pad_7dp">
                            <TextView
                                style="@style/LabelTextView"
                                android:text="@string/alerts_your_asq_due_to"
                                android:textSize="@dimen/txt_8_sp"
                                android:gravity="center_vertical"
                                android:textColor="@color/normal_back"
                                android:layout_marginBottom="@dimen/pad_7dp"
                                />
                            <TextView
                                style="@style/LabelTextView"
                                android:text="@string/alerts_take_it_now"
                                android:textSize="@dimen/txt_8_sp"
                                android:textStyle="normal"
                                android:textColor="@color/normal_back"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/pad_7dp"
                            android:src="@drawable/ic_alerts_detail_of_asq"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/pad_3dp">
                    <RelativeLayout
                        android:layout_width="@dimen/pad_50dp"
                        android:layout_height="@dimen/pad_50dp"
                        android:background="@drawable/alert_act_back">
                        <ImageView
                            android:layout_width="@dimen/pad_23dp"
                            android:layout_height="@dimen/pad_23dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/take_act_logo"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/pad_7dp">
                            <TextView
                                style="@style/LabelTextView"
                                android:text="@string/alerts_your_act_due_to"
                                android:textSize="@dimen/txt_8_sp"
                                android:gravity="center_vertical"
                                android:textColor="@color/normal_back"
                                android:layout_marginBottom="@dimen/pad_7dp"
                                />
                            <TextView
                                style="@style/LabelTextView"
                                android:text="@string/alerts_take_it_now"
                                android:textSize="@dimen/txt_8_sp"
                                android:textStyle="normal"
                                android:textColor="@color/normal_back"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/pad_7dp"
                            android:src="@drawable/ic_alerts_detail_of_act"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
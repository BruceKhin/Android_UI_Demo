<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/pad_3dp"
    android:layout_marginRight="@dimen/pad_3dp"
    android:layout_marginTop="@dimen/pad_3dp"
    card_view:cardElevation="@dimen/pad_3dp"
    card_view:cardCornerRadius="@dimen/pad_2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_3dp"
            android:paddingLeft="@dimen/pad_4dp"
            android:paddingRight="@dimen/pad_4dp">
            <TextView
                style="@style/LabelTextView"
                android:textStyle="bold"
                android:layout_margin="0dp"
                android:textColor="@color/normal_back"
                android:text="@string/dboard_act_result"/>
            <TextView
                android:id="@+id/tvAddedDate"
                style="@style/LabelTextView"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:gravity="right|center_vertical"
                android:textStyle="normal"
                android:textSize="@dimen/txt_6_sp"
                android:textColor="@color/dboard_last_update_text"
                android:text="Last added: 9:22am, Tue 26 Jul 2016"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/cht_ACT_Graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_3dp"
            android:layout_marginRight="@dimen/pad_3dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:layout_marginBottom="@dimen/pad_10dp">
        </com.github.mikephil.charting.charts.BarChart>

        <RelativeLayout
            android:id="@+id/rlACTResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/pad_10dp"
            android:layout_marginBottom="@dimen/pad_10dp">
            <TextView
                style="@style/LabelTextView"
                android:textColor="@color/normal_back"
                android:textStyle="normal"
                android:layout_centerVertical="true"
                android:text="@string/dboard_act_due"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/txt_9_sp"
                android:text="29 days"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/pad_5dp"
                android:paddingBottom="@dimen/pad_5dp"
                android:paddingRight="@dimen/pad_15dp"
                android:paddingLeft="@dimen/pad_15dp"
                android:layout_marginRight="@dimen/pad_15dp"
                android:background="@drawable/dboard_act_due_in_days_back"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlPlusTake_ACT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dboard_item_plus_button">
            <TextView
                style="@style/LabelTextView"
                android:textColor="@color/normal_back"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/pad_7dp"
                android:layout_marginBottom="@dimen/pad_7dp"
                android:text="@string/dboard_act_take"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
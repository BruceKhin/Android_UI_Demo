<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activate_back"
        android:id="@+id/imgSplashBack" />
    <RelativeLayout
        android:id="@+id/rlTopActivate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivMainLogo"
            android:layout_width="@dimen/pad_70dp"
            android:layout_height="@dimen/pad_32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/pad_25dp"
            android:src="@drawable/main_logo" />
        <TextView
            android:id="@+id/tvWelcome"
            style="@style/WhiteNormalTextTitle"
            android:layout_below="@+id/ivMainLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:text="@string/activate_welcome"
            android:textSize="@dimen/txt_16_sp" />
        <TextView
            android:id="@+id/tvActivateDetail"
            style="@style/WhiteNormalText"
            android:layout_marginTop="@dimen/pad_5dp"
            android:layout_below="@+id/tvWelcome"
            android:layout_centerHorizontal="true"
            android:text="@string/activate_detail"
            android:gravity="center"
            android:textSize="@dimen/txt_8_sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/keyboardLayout"
        style="@style/MatchParentRL"
        android:layout_below="@+id/rlTopActivate"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvActivationCode"
            style="@style/WhiteNormalText"
            android:textColor="@color/textPurple"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/pad_7dp"
            android:text="@string/activate_active_code"
            android:textSize="@dimen/txt_8_sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_7dp"
            android:layout_marginRight="@dimen/pad_7dp"
            android:layout_below="@+id/tvActivationCode"
            android:layout_marginTop="@dimen/pad_4dp">
            <RelativeLayout
                android:id="@+id/rlActivateCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:padding="@dimen/pad_1dp">
                <EditText
                    android:id="@+id/edtActivationCode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_20dp"
                    android:background="@drawable/rounded_textedit"
                    android:hint="_ _ _-_ _ _"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:paddingStart="@dimen/pad_10dp"
                    android:paddingLeft="@dimen/pad_10dp" />
                <RelativeLayout
                    android:layout_width="@dimen/pad_30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/right_rounded_view"
                    android:layout_alignEnd="@+id/edtActivationCode"
                    android:layout_alignRight="@+id/edtActivationCode"
                    android:layout_alignBottom="@+id/edtActivationCode"
                    android:padding="@dimen/pad_2dp">
                    <ImageView
                        style="@style/WrapSizeImgView"
                        android:src="@drawable/ic_activate_question"
                        android:scaleType="centerInside"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlAlertError"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_outline">
                <ImageView
                    style="@style/WrapSizeImgView"
                    android:layout_marginRight="@dimen/pad_35dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/error_alert"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvAlertError"
            style="@style/WhiteNormalText"
            android:layout_below="@+id/rlActivateCode"
            android:layout_marginLeft="@dimen/pad_7dp"
            android:layout_marginTop="@dimen/pad_5dp"
            android:text="@string/activate_failed"
            android:textSize="@dimen/txt_7_sp"
            android:textColor="@color/alertError" />
        <LinearLayout
            style="@style/MatchParentRL"
            android:orientation="vertical"
            android:layout_below="@+id/rlActivateCode">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/tvAlreadyLogin"
                    style="@style/WhiteNormalText"
                    android:layout_marginTop="@dimen/pad_5dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/activate_already_entered"
                    android:textSize="@dimen/txt_7_sp" />
                <TextView
                    android:id="@+id/btnLoginHere"
                    style="@style/WhiteNormalText"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tvAlreadyLogin"
                    android:text="@string/activate_login_here"
                    android:layout_marginTop="@dimen/pad_5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_7_sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/tvTermsOfUse"
                    style="@style/WhiteNormalText"
                    android:text="@string/activate_terms_of_use"
                    android:textSize="@dimen/txt_8_sp"
                    android:textColor="@color/textPurple"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/pad_7dp"
                android:paddingRight="@dimen/pad_7dp"
                android:layout_marginBottom="@dimen/pad_4dp">
                <Button
                    android:id="@+id/btnActivate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_20dp"
                    android:background="@drawable/rounded_activate_button"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:text="@string/activate_active_button"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <include
        layout="@layout/action_bar" />
    <LinearLayout
        android:id="@+id/keyboardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/header_action">
        <ImageView
            android:layout_width="@dimen/pad_14dp"
            android:layout_height="@dimen/pad_18dp"
            android:layout_marginTop="@dimen/pad_7dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sleep_symptom" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                style="@style/LabelTextView"
                android:text="@string/add_sleep_times_woken_symptom"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/pad_5dp"
                android:textSize="@dimen/txt_10_sp"
                android:textStyle="normal"
                android:paddingLeft="@dimen/pad_4dp"
                android:paddingRight="@dimen/pad_4dp"
                android:textColor="@color/normal_back" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/pad_8dp"
                android:layout_marginLeft="@dimen/pad_20dp"
                android:layout_marginRight="@dimen/pad_20dp"
                android:alpha="0.7"
                android:layout_marginBottom="@dimen/pad_13dp"
                android:background="@drawable/add_hw_progress_small_gap_horizontal_dot_line" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_67dp"
            android:layout_margin="@dimen/pad_7dp"
            android:background="@drawable/rounded_btn_white_dark_white_border">

            <EditText
                android:id="@+id/tvTimesNumber"
                style="@style/TimesTextView"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/vCenter"
                android:textColor="@color/add_sleep_red"
                android:layout_margin="0dp"
                android:gravity="right"
                android:maxLength="2"
                android:inputType="numberDecimal"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:text="--" />
            <View
                android:id="@+id/vCenter"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/vCenter"
                android:textSize="@dimen/txt_10_sp"
                android:layout_marginTop="@dimen/pad_5dp"
                android:layout_marginLeft="@dimen/pad_5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/add_medic_times_day"
                android:layout_alignTop="@+id/tvTimesNumber"
                android:textStyle="bold"
                android:text="@string/add_sleep_times"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvLevelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="3"
        android:textStyle="normal"
        android:textSize="@dimen/txt_9_sp"
        android:padding="@dimen/pad_2dp"
        android:textColor="@color/add_sleep_red"
        android:layout_marginBottom="@dimen/pad_9dp" />
    <TextView
        android:id="@+id/tvTotalLevelNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/tvLevelNumber"
        android:layout_alignTop="@+id/tvLevelNumber"
        android:layout_marginTop="@dimen/pad_2dp"
        android:text="/3"
        android:textStyle="normal"
        android:textSize="@dimen/txt_7_sp"
        android:textColor="@color/little_tap_btn_grey_border"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <include
        layout="@layout/action_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_action">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/pad_17dp"
                android:layout_height="@dimen/pad_16dp"
                android:layout_marginTop="@dimen/pad_12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_update_medic"/>
            <TextView
                style="@style/LabelTextView"
                android:text="Steroid Tablets"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/pad_7dp"
                android:textSize="@dimen/txt_12_sp"
                android:textStyle="normal"
                android:textColor="@color/normal_back"/>
            <View
                android:layout_width="@dimen/pad_46dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@drawable/add_hw_progress_small_gap_horizontal_dot_line"/>
            <LinearLayout
                android:id="@+id/llDetailMedicInfo"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/LabelTextView"
                    android:text="@string/settings_medic_new_dosage"
                    android:textColor="@color/normal_back"
                    android:layout_marginTop="@dimen/pad_7dp"
                    android:layout_marginLeft="@dimen/pad_7dp" />
                <Spinner
                    android:id="@+id/spnDosageNewMedic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_22dp"
                    android:background="@drawable/update_medic_spinner_back"
                    android:layout_marginLeft="@dimen/pad_7dp"
                    android:layout_marginRight="@dimen/pad_7dp"
                    android:layout_marginTop="@dimen/pad_5dp" />
                <TextView
                    style="@style/LabelTextView"
                    android:text="@string/settings_medic_new_frequency"
                    android:textColor="@color/normal_back"
                    android:layout_marginTop="@dimen/pad_9dp"
                    android:layout_marginLeft="@dimen/pad_7dp" />
                <Spinner
                    android:id="@+id/spnFrequencyTakingMedic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_22dp"
                    android:background="@drawable/update_medic_spinner_back"
                    android:layout_marginLeft="@dimen/pad_7dp"
                    android:layout_marginRight="@dimen/pad_7dp"
                    android:layout_marginTop="@dimen/pad_5dp" />
                <LinearLayout
                    android:id="@+id/llHowTake"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/LabelTextView"
                        android:text="@string/add_medi_how_take"
                        android:textColor="@color/normal_back"
                        android:layout_marginTop="@dimen/pad_9dp"
                        android:layout_marginLeft="@dimen/pad_7dp" />
                    <Spinner
                        android:id="@+id/spnHowTake"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pad_22dp"
                        android:background="@drawable/update_medic_spinner_back"
                        android:layout_marginLeft="@dimen/pad_7dp"
                        android:layout_marginRight="@dimen/pad_7dp"
                        android:layout_marginTop="@dimen/pad_5dp" />
                    <TextView
                        style="@style/LabelTextView"
                        android:text="@string/add_medi_how_often"
                        android:textColor="@color/normal_back"
                        android:layout_marginTop="@dimen/pad_7dp"
                        android:layout_marginLeft="@dimen/pad_7dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pad_50dp"
                        android:layout_margin="@dimen/pad_7dp"
                        android:background="@drawable/rounded_btn_white_dark_white_border">
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/tvTimesNumber"
                                style="@style/TimesTextView"
                                android:textColor="@color/own_pink"
                                android:layout_margin="0dp"
                                android:padding="0dp"
                                android:text="00" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tvTimesNumber"
                                android:textSize="@dimen/txt_10_sp"
                                android:layout_marginTop="@dimen/pad_2dp"
                                android:layout_marginLeft="@dimen/pad_2dp"
                                android:textColor="@color/add_medic_times_day"
                                android:textStyle="bold"
                                android:text="@string/add_medi_time_per_day"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btnNoMoreTakeInScr"
                style="@style/ButtonWhiteBackPinkText"
                android:text="@string/settings_medic_not_anymore"
                android:layout_marginBottom="@dimen/pad_12dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_btn_white_dark_white_border"/>
        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnNoMoreTakeNotInScr"
            style="@style/ButtonWhiteBackPinkText"
            android:text="@string/settings_medic_not_anymore"
            android:layout_marginBottom="@dimen/pad_12dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_btn_white_dark_white_border"/>
    </RelativeLayout>
</RelativeLayout>
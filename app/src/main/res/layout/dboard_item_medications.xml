<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/pad_3dp"
    android:layout_marginRight="@dimen/pad_3dp"
    android:layout_marginTop="@dimen/pad_3dp"
    card_view:cardElevation="@dimen/pad_3dp"
    card_view:cardCornerRadius="@dimen/pad_2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_3dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/pad_4dp"
            android:paddingRight="@dimen/pad_4dp">
            <TextView
                style="@style/LabelTextView"
                android:layout_margin="0dp"
                android:text="@string/dboard_medications"
                android:textColor="@color/normal_back"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvAddedDate_Medications"
                style="@style/LabelTextView"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:gravity="right|center_vertical"
                android:text="@string/dboard_no_data_added"
                android:textColor="@color/dboard_last_update_text"
                android:textSize="@dimen/txt_6_sp"
                android:textStyle="normal" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvMedicationNoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginTop="@dimen/pad_15dp"
            android:layout_marginBottom="@dimen/pad_15dp"
            android:paddingTop="@dimen/pad_5dp"
            android:paddingBottom="@dimen/pad_5dp"
            android:paddingLeft="@dimen/pad_10dp"
            android:paddingRight="@dimen/pad_10dp"
            android:textStyle="bold"
            android:text="@string/dboard_medications_no_data"
            android:textColor="@color/text_label_light"
            android:background="@drawable/dboard_medications_no_data"
            android:textSize="@dimen/txt_8_sp" />
        <TextView
            android:id="@+id/tvCurrentMedic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_4dp"
            android:textColor="@color/normal_back"
            android:text="@string/dboard_medications_current"/>
        <ListView
            android:id="@+id/lstMedicationResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/pad_4dp"
            android:paddingRight="@dimen/pad_4dp"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/pad_5dp"/>
        <RelativeLayout
            android:id="@+id/rlPlusTake_Medication"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_22dp"
            android:background="@drawable/dboard_item_plus_button">
            <TextView
                style="@style/LabelTextView"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/pad_7dp"
                android:layout_marginTop="@dimen/pad_7dp"
                android:text="@string/dboard_medications_take"
                android:textColor="@color/normal_back" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
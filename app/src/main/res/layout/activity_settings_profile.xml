<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <include
        layout="@layout/action_bar" />

    <ScrollView
        android:id="@+id/scrView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_action"
        android:layout_marginTop="-5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_profile"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_18dp"
                android:background="@color/sub_title_back"
                android:layout_marginTop="@dimen/pad_15dp"
                android:paddingLeft="@dimen/pad_7dp">
                <TextView
                    style="@style/LabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_login_detail"
                    android:textColor="@color/text_label_same_back" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/pad_7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="@dimen/pad_4dp"
                        android:layout_height="@dimen/pad_32dp"
                        android:background="@color/profile_email_left_back"/>
                    <TextView
                        style="@style/LabelTextView"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/profile_email_text"
                        android:textSize="@dimen/txt_8_sp"
                        android:textStyle="normal"
                        android:layout_marginLeft="@dimen/pad_10dp"
                        android:layout_weight="1"
                        android:text="emailaddress@email.com"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/pad_10dp"
                        android:src="@drawable/ic_profile_auth"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/little_tap_btn_grey_border"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="@dimen/pad_4dp"
                        android:layout_height="@dimen/pad_32dp"
                        android:background="@color/profile_password_left_back"/>
                    <TextView
                        style="@style/LabelTextView"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/profile_password_text"
                        android:textSize="@dimen/txt_8_sp"
                        android:textStyle="normal"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/pad_10dp"
                        android:text="@string/profile_change_password"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/pad_10dp"
                        android:src="@drawable/ic_settings_detail_right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/little_tap_btn_grey_border"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_18dp"
                android:background="@color/sub_title_back"
                android:layout_marginTop="@dimen/pad_15dp"
                android:paddingLeft="@dimen/pad_7dp">
                <TextView
                    style="@style/LabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/profile_personal_info"
                    android:textColor="@color/text_label_same_back" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_15dp">
                <TextView
                    style="@style/LabelTextView"
                    android:textColor="@color/dboard_detail_data_back"
                    android:text="@string/little_height"
                    android:layout_marginLeft="@dimen/pad_7dp" />
                <TextView
                    android:id="@+id/tvHeightValue"
                    style="@style/LabelTextView"
                    android:textColor="@color/text_label_light"
                    android:text="178cm   |   5’10”   |   70"
                    android:layout_marginLeft="@dimen/pad_7dp"
                    android:layout_marginRight="@dimen/pad_7dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <Button
                android:id="@+id/btnAddHeight"
                style="@style/ButtonWhiteBackPinkText"
                android:text="@string/profile_press_and_hold"
                android:textColor="@color/profile_btn_text"
                android:layout_marginRight="@dimen/pad_7dp"
                android:layout_marginTop="@dimen/pad_7dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_7dp">
                <TextView
                    style="@style/LabelTextView"
                    android:textColor="@color/dboard_detail_data_back"
                    android:text="@string/little_weight"
                    android:layout_marginLeft="@dimen/pad_7dp" />
                <TextView
                    android:id="@+id/tvWeightValue"
                    style="@style/LabelTextView"
                    android:textColor="@color/text_label_light"
                    android:text="136.2kg   |   300.3lbs   |   21st 4lbs"
                    android:layout_marginLeft="@dimen/pad_7dp"
                    android:layout_marginRight="@dimen/pad_7dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <Button
                android:id="@+id/btnAddWeight"
                style="@style/ButtonWhiteBackPinkText"
                android:text="@string/profile_press_and_hold"
                android:textColor="@color/profile_btn_text"
                android:layout_marginTop="@dimen/pad_7dp" />
            <Button
                style="@style/ButtonWhiteBackPinkText"
                android:text="@string/profile_save"
                android:background="@drawable/rounded_btn_blue"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/pad_15dp"
                android:layout_marginTop="@dimen/pad_15dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
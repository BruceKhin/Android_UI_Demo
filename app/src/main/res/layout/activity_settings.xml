<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/settings_back"
    android:minWidth="25px"
    android:minHeight="25px">
    <include
        layout="@layout/action_bar" />
    <ScrollView
        android:id="@+id/scrView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/header_action">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llProfile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginBottom="1dp">
                <RelativeLayout
                    android:layout_width="@dimen/pad_45dp"
                    android:layout_height="@dimen/pad_45dp">
                    <ImageView
                        android:layout_width="@dimen/pad_15dp"
                        android:layout_height="@dimen/pad_16dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_settings_profile" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pad_3dp">
                        <TextView
                            style="@style/LabelTextView"
                            android:text="@string/settings_profile"
                            android:textSize="@dimen/txt_8_sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/normal_back" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/pad_15dp"
                        android:src="@drawable/ic_settings_detail_right" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAsthmaMedic"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginBottom="1dp">
                <RelativeLayout
                    android:layout_width="@dimen/pad_45dp"
                    android:layout_height="@dimen/pad_45dp">
                    <ImageView
                        android:layout_width="@dimen/pad_13dp"
                        android:layout_height="@dimen/pad_12dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_settings_asthma_medic" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pad_3dp">
                        <TextView
                            style="@style/LabelTextView"
                            android:text="@string/settings_asthma_medication"
                            android:textSize="@dimen/txt_8_sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/normal_back" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/pad_15dp"
                        android:src="@drawable/ic_settings_detail_right" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llMyActiGraph"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginBottom="1dp">
                <RelativeLayout
                    android:layout_width="@dimen/pad_45dp"
                    android:layout_height="@dimen/pad_45dp">
                    <ImageView
                        android:layout_width="@dimen/pad_16dp"
                        android:layout_height="@dimen/pad_16dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_settings_myact_graph" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pad_3dp">
                        <TextView
                            style="@style/LabelTextView"
                            android:text="@string/settings_my_actigraph"
                            android:textSize="@dimen/txt_8_sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/normal_back" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/pad_15dp"
                        android:src="@drawable/ic_settings_detail_right" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llNotifications"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginBottom="1dp">
                <RelativeLayout
                    android:layout_width="@dimen/pad_45dp"
                    android:layout_height="@dimen/pad_45dp">
                    <ImageView
                        android:layout_width="@dimen/pad_13dp"
                        android:layout_height="@dimen/pad_16dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_settings_alert" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pad_3dp">
                        <TextView
                            style="@style/LabelTextView"
                            android:text="@string/settings_notifications"
                            android:textSize="@dimen/txt_8_sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/normal_back" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/pad_15dp"
                        android:src="@drawable/ic_settings_detail_right" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llHelpSupport"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginBottom="1dp">
                <RelativeLayout
                    android:layout_width="@dimen/pad_45dp"
                    android:layout_height="@dimen/pad_45dp">
                    <ImageView
                        android:layout_width="@dimen/pad_13dp"
                        android:layout_height="@dimen/pad_14dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_settings_help" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pad_3dp">
                        <TextView
                            style="@style/LabelTextView"
                            android:text="@string/settings_help_contact"
                            android:textSize="@dimen/txt_8_sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/normal_back" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/pad_15dp"
                        android:src="@drawable/ic_settings_detail_right" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAbout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginBottom="1dp">
                <RelativeLayout
                    android:layout_width="@dimen/pad_45dp"
                    android:layout_height="@dimen/pad_45dp">
                    <ImageView
                        android:layout_width="@dimen/pad_15dp"
                        android:layout_height="@dimen/pad_16dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_settings_about" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pad_3dp">
                        <TextView
                            style="@style/LabelTextView"
                            android:text="@string/settings_about"
                            android:textSize="@dimen/txt_8_sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/normal_back" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/pad_15dp"
                        android:src="@drawable/ic_settings_detail_right" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
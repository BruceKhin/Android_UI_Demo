<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/pad_3dp"
    card_view:cardCornerRadius="@dimen/pad_2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_3dp"
            android:paddingLeft="@dimen/pad_4dp"
            android:paddingRight="@dimen/pad_4dp">
            <TextView
                style="@style/LabelTextView"
                android:textStyle="bold"
                android:layout_margin="0dp"
                android:textColor="@color/normal_back"
                android:text="@string/dboard_spirometry"/>
            <TextView
                android:id="@+id/tvAddedDate"
                style="@style/LabelTextView"
                android:layout_width="match_parent"
                android:layout_margin="0dp"
                android:gravity="right|center_vertical"
                android:textStyle="normal"
                android:textSize="@dimen/txt_6_sp"
                android:textColor="@color/dboard_last_update_text"
                android:text="@string/dboard_no_data_added"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_10dp"
            android:layout_marginBottom="@dimen/pad_10dp">
            <TextView
                style="@style/LabelTextView"
                android:text="@string/dboard_spirometry_no_data"
                android:textSize="@dimen/txt_8_sp"
                android:lineSpacingMultiplier="1.5"
                android:layout_centerVertical="true"
                android:textColor="@color/dboard_no_data_blue"/>
            <ImageView
                android:layout_width="@dimen/pad_45dp"
                android:layout_height="@dimen/pad_45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/add_spirometry_logo"
                android:layout_marginRight="@dimen/pad_10dp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rlSpirometryResult"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/pad_4dp"
            android:layout_marginRight="@dimen/pad_4dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:layout_marginBottom="@dimen/pad_10dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/LabelTextView"
                    android:text="@string/dboard_spirometry_fev1"
                    android:textColor="@color/normal_back"
                    android:textSize="@dimen/txt_6_sp"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"/>
                <RelativeLayout
                    android:layout_width="@dimen/pad_35dp"
                    android:layout_height="@dimen/pad_35dp"
                    android:layout_marginTop="@dimen/pad_7dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dboard_spirometry_speed_back">
                    <TextView
                        style="@style/LabelTextView"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/white"
                        android:text="3.4"
                        android:textSize="@dimen/txt_15_sp"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dboard_spirometry_speed_border"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/LabelTextView"
                    android:text="@string/dboard_spirometry_fvc"
                    android:textSize="@dimen/txt_6_sp"
                    android:textColor="@color/normal_back"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"/>
                <RelativeLayout
                    android:layout_width="@dimen/pad_35dp"
                    android:layout_height="@dimen/pad_35dp"
                    android:layout_marginTop="@dimen/pad_7dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dboard_spirometry_speed_back">
                    <TextView
                        style="@style/LabelTextView"
                        android:layout_centerInParent="true"
                        android:textColor="@android:color/white"
                        android:text="5.6"
                        android:textSize="@dimen/txt_15_sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlPlusTake_Spirometry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dboard_item_plus_button">
            <TextView
                style="@style/LabelTextView"
                android:textColor="@color/normal_back"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/pad_7dp"
                android:layout_marginBottom="@dimen/pad_7dp"
                android:text="@string/dboard_spirometry_take"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
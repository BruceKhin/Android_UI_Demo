<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#f5f7fa" android:startColor="#ebedf1" android:type="linear" />
                    <stroke android:width="1dp" android:color="#aab2bd" />
                    <corners android:radius="@dimen/pad_2dp" />
                </shape>
            </item>
            <item android:left="0dp" android:top="0dp" android:bottom="0dp" android:width="@dimen/pad_4dp">
                <shape>
                    <gradient android:angle="90" android:endColor="@color/own_pink" android:startColor="@color/own_pink" android:type="linear" />
                    <corners android:topLeftRadius="@dimen/pad_2dp" android:bottomLeftRadius="@dimen/pad_2dp" />
                    <stroke android:width="1dp" android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>

    </item>

</selector>
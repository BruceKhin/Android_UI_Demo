<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="1dp">
        <shape android:shape="rectangle" >
            <gradient android:angle="90" android:endColor="@color/little_bar_progress" android:startColor="@color/little_bar_progress" android:type="linear" />
            <corners android:radius="@dimen/pad_2dp" />
        </shape>
    </item>
    <item android:left="@dimen/pad_4dp">
        <shape android:shape="rectangle"  >
            <solid android:color="#aab2bd"/>
            <corners android:bottomRightRadius="@dimen/pad_2dp"
                android:topRightRadius="@dimen/pad_2dp"/>
        </shape>
    </item>
    <item android:left="@dimen/pad_4dp" android:top="1dp" android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#ebedf1" android:startColor="#ebedf1" android:type="linear" />
            <corners android:bottomRightRadius="@dimen/pad_2dp"
                android:topRightRadius="@dimen/pad_2dp"/>
        </shape>
    </item>
</layer-list>